<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header Azul -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#0000FF">

        <!-- Icono perfil -->
        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/sym_def_app_icon"
            android:background="@drawable/circle_bg"
            android:layout_margin="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <!-- Texto saludo -->
        <TextView
            android:id="@+id/tvSaludo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi Person"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_toEndOf="@id/imgPerfil"
            android:layout_alignTop="@id/imgPerfil"
            android:layout_marginStart="12dp"/>

        <!-- Menú hamburguesa -->
        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:contentDescription="Menu"/>

        <!-- Caja de ubicación -->
        <LinearLayout
            android:id="@+id/locationBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_below="@id/imgPerfil"
            android:layout_margin="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your location"
                android:textStyle="italic"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginVertical="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your destination"
                android:textStyle="italic"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Opciones de transporte -->

    <!-- Botón abrir mapa -->
    <GridLayout
        android:id="@+id/transportOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="20dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:gravity="center"
        android:padding="16dp"
        android:rowCount="2">

        <!-- Bicicleta -->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="#444444"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_bike"
                android:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="bicycle"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Carro -->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="#444444"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_car"
                android:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="car"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Bus -->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="#444444"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_bus"
                android:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="bus"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </GridLayout>

    <Button
        android:id="@+id/btnOpenMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN MAP"
        android:background="#DDDDDD"
        android:layout_below="@id/transportOptions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Home -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_view"
            android:tint="#444444"
            android:layout_margin="20dp"/>

        <!-- Add -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_input_add"
            android:background="@drawable/circle_bg"
            android:layout_margin="20dp"
            android:tint="#0000FF"/>

        <!-- Files -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_agenda"
            android:tint="#444444"
            android:layout_margin="20dp"/>
    </LinearLayout>
</RelativeLayout>
