<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo translúcido -->
    <solid android:color="#CCFFFFFF" /> <!-- 33 = 20% opacidad, puedes ajustar -->

    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />

    <!-- Sombra interna ligera (simulada con padding + color más oscuro) -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp" />

    <!-- Borde sutil -->
    <stroke
        android:width="1dp"
        android:color="#55FFFFFF" /> <!-- borde blanco semi-transparente -->
</shape>
