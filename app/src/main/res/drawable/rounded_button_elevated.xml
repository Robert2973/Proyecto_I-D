<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#1E88E5"/> <!-- Azul mÃ¡s oscuro al presionar -->
            <corners android:radius="12dp"/>
            <stroke
                android:width="1dp"
                android:color="#1565C0"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3"/> <!-- Azul principal -->
            <corners android:radius="12dp"/>
            <stroke
                android:width="1dp"
                android:color="#1976D2"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>

</selector>
