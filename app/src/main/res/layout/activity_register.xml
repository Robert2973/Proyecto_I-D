<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/futuristic_bg"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:animateLayoutChanges="true">

        <!-- Botón volver -->
        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="26sp"
            android:textColor="#E5FFF4"
            android:layout_marginBottom="24dp"
            android:padding="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:alpha="0.9"
            android:shadowColor="#1FFF9E"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="6"/>

        <!-- LOGO SUPERIOR -->
        <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_sinfondo"
            android:contentDescription="App Logo"
            android:layout_marginBottom="24dp"
            android:alpha="0.9"
            android:translationY="10dp"
            android:animateLayoutChanges="true" />

        <!-- Subtítulo -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crea tu cuenta"
            android:textSize="15sp"
            android:textColor="#B0BEC5"
            android:layout_marginBottom="24dp"
            android:letterSpacing="0.03"
            android:alpha="0.85"/>

        <!-- Nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre completo"
            android:inputType="textPersonName"
            android:background="@drawable/glass_input"
            android:padding="18dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4BC"
            android:layout_marginBottom="10dp"
            android:elevation="8dp"
            android:alpha="0.95"/>

        <!-- Edad -->
        <EditText
            android:id="@+id/etEdad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edad"
            android:inputType="number"
            android:background="@drawable/glass_input"
            android:padding="18dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4BC"
            android:layout_marginBottom="10dp"
            android:elevation="8dp"
            android:alpha="0.95"/>

        <!-- Teléfono -->
        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            android:inputType="phone"
            android:background="@drawable/glass_input"
            android:padding="18dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4BC"
            android:layout_marginBottom="10dp"
            android:elevation="8dp"
            android:alpha="0.95"/>

        <!-- Email -->
        <EditText
            android:id="@+id/etEmailRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:background="@drawable/glass_input"
            android:padding="18dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4BC"
            android:layout_marginBottom="10dp"
            android:elevation="8dp"
            android:alpha="0.95"/>

        <!-- Password -->
        <EditText
            android:id="@+id/etPasswordRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:background="@drawable/glass_input"
            android:padding="18dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4BC"
            android:layout_marginBottom="10dp"
            android:elevation="8dp"
            android:alpha="0.95"/>

        <!-- Confirm Password -->
        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar contraseña"
            android:inputType="textPassword"
            android:background="@drawable/glass_input"
            android:padding="18dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4BC"
            android:layout_marginBottom="20dp"
            android:elevation="8dp"
            android:alpha="0.95"/>

        <!-- Botón Sign Up -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar cuenta"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/animated_button"
            android:elevation="12dp"
            android:letterSpacing="0.07"
            android:stateListAnimator="@animator/button_press_anim" />

        <!-- Divider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O regístrate con"
            android:textColor="#8FA4B2"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="14dp"
            android:letterSpacing="0.03"/>

        <!-- Iconos redes sociales -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="20dp">

            <!-- Google -->

            <!-- Facebook -->
            <ImageView
                android:id="@+id/btnGoogleSignIn"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/icon_glow_circle"
                android:elevation="6dp"
                android:padding="10dp"
                android:src="@drawable/logo_google" />

            <ImageView
                android:id="@+id/btnFacebookSignIn"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="10dp"
                android:background="@drawable/icon_glow_circle"
                android:src="@drawable/git"
                android:layout_marginEnd="16dp"
                android:elevation="6dp"/>

            <!-- Microsoft
            <ImageView
                android:id="@+id/btnMicrosoftSignIn"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="10dp"
                android:background="@drawable/icon_glow_circle"
                android:src="@drawable/ic_microsoft"
                android:elevation="6dp"/> -->
        </LinearLayout>

    </LinearLayout>
</ScrollView>
