<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Botón regresar -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_back_white"
            android:contentDescription="Regresar"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"/>

        <!-- Tarjeta principal del reporte -->
        <LinearLayout
            android:id="@+id/cardReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/ivBack"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_card_light"
            android:padding="24dp"
            android:elevation="6dp"
            android:gravity="center_horizontal">

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: Usuario"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp"
                android:gravity="center"/>

            <!-- Fecha y hora -->
            <TextView
                android:id="@+id/tvFechaHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha/Hora: 01/01/2025 12:00"
                android:textColor="#555555"
                android:layout_marginBottom="12dp"
                android:gravity="center"/>

            <!-- Dirección -->
            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección: Calle Ejemplo 123"
                android:textColor="#555555"
                android:layout_marginBottom="12dp"
                android:gravity="center"/>

            <!-- Riesgo -->
            <TextView
                android:id="@+id/tvRiesgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de riesgo: Medio"
                android:textColor="#555555"
                android:layout_marginBottom="12dp"
                android:gravity="center"/>

            <!-- Descripción (bloque tipo párrafo) -->
            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del reporte. Aquí se puede poner todo el detalle que necesites. Se mostrará como un párrafo centrado con buena legibilidad."
                android:textColor="#444444"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:paddingTop="8dp"/>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
