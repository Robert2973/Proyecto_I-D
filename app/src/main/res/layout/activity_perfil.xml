<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blur"
    android:fillViewport="true"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header cristalino -->
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_card_glass"
            android:elevation="8dp"
            android:padding="16dp">

            <!-- Flecha de regreso -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="16dp"
                android:contentDescription="Regresar"
                android:src="@drawable/ic_back_white"
                android:textColor="#000000" />

            <!-- Imagen perfil circular con sombra -->
            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="33dp"
                android:background="@drawable/circle_bg_shadow"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:src="@drawable/ic_user"
                android:contentDescription="Imagen de perfil" />


            <!-- Datos usuario dentro de tarjeta cristalina -->
            <LinearLayout
                android:id="@+id/datosUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgPerfil"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_card_glass"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Nombre: Usuario"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvEdad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Edad: Desconocida"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvDireccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Dirección: Puebla"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTelefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tel: 123456789"
                    android:textColor="#070707"
                    android:textSize="16sp" />

                <!-- Botón editar -->
                <Button
                    android:id="@+id/btnEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Editar" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Historial -->
        <TextView
            android:id="@+id/tvHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historial"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_below="@id/header"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true" />

        <!-- Lista Historial con tarjetas cristalinas -->
        <LinearLayout
            android:id="@+id/layoutHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHistorial"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ejemplo de tarjeta de reporte -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reporte 1"
                android:background="@drawable/rounded_card_glass"
                android:padding="14dp"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:elevation="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reporte 2"
                android:background="@drawable/rounded_card_glass"
                android:padding="14dp"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:elevation="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reporte 3"
                android:background="@drawable/rounded_card_glass"
                android:padding="14dp"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- Botones sociales -->
        <LinearLayout
            android:id="@+id/socialButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutHistorial"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp" />
    </RelativeLayout>
</ScrollView>
