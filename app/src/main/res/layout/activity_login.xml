<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/futuristic_bg"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:animateLayoutChanges="true">

        <!-- LOGO SUPERIOR -->
        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_sinfondo"
            android:contentDescription="App Logo"
            android:layout_marginBottom="24dp"
            android:alpha="0.9"
            android:translationY="10dp"
            android:animateLayoutChanges="true" />

        <!-- SUBTÍTULO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login to your Account"
            android:textSize="15sp"
            android:textColor="#B0BEC5"
            android:layout_marginBottom="24dp"
            android:letterSpacing="0.03"
            android:alpha="0.85"/>

        <!-- EMAIL -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/glass_input"
            android:padding="18dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4BC"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:elevation="8dp"
            android:drawablePadding="10dp"
            android:alpha="0.95"/>

        <!-- PASSWORD -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/glass_input"
            android:padding="18dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A9B4BC"
            android:layout_marginTop="10dp"
            android:elevation="8dp"
            android:drawablePadding="10dp"
            android:alpha="0.95"/>

        <!-- BOTÓN LOGIN -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/animated_button"
            android:elevation="12dp"
            android:letterSpacing="0.07"
            android:stateListAnimator="@animator/button_press_anim" />

        <!-- DIVIDER -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or sign in with"
            android:textColor="#8FA4B2"
            android:textSize="14sp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="10dp"
            android:letterSpacing="0.03"/>

        <!-- ICONOS REDES SOCIALES -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/btnGoogleSignIn"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="10dp"
                android:background="@drawable/icon_glow_circle"
                android:src="@drawable/logo_google"
                android:layout_marginEnd="16dp"
                android:contentDescription="Sign in with Google"
                android:elevation="6dp"/>

            <ImageView
                android:id="@+id/btnGithubLogin"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="10dp"
                android:background="@drawable/icon_glow_circle"
                android:src="@drawable/git"
                android:elevation="6dp"/>
        </LinearLayout>

        <!-- TEXTO REGISTRO -->
        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="Don't have an account? Sign up"
            android:textSize="14sp"
            android:textColor="#E5FFF4"
            android:shadowColor="#1FFF9E"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="6"
            android:letterSpacing="0.04"
            android:alpha="0.9"/>
    </LinearLayout>
</ScrollView>
