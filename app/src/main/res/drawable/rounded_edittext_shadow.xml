<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo blanco semi-brillante -->
    <solid android:color="#FFFFFF"/>

    <!-- Bordes redondeados -->
    <corners android:radius="12dp"/>

    <!-- Sombra / borde difuminado -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/>

    <!-- Contorno gris claro para profundidad -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD"/>
</shape>
