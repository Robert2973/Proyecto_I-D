<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_blur"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:paddingBottom="40dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_back_white"
                android:contentDescription="Regresar"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:alpha="0.9"
                android:translationZ="6dp" />

            <ImageView
                android:id="@+id/imgReporte"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="Imagen del reporte"
                android:background="@drawable/image_frame_bg"
                android:elevation="8dp"
                android:visibility="gone"/> <LinearLayout
            android:id="@+id/cardReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_glass"
            android:padding="24dp"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            android:animateLayoutChanges="true"
            android:visibility="gone"> <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargando Nombre..."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            android:layout_marginBottom="14dp"
            android:gravity="center" />
            <TextView
                android:id="@+id/tvFechaHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando Fecha/Hora..."
                android:textColor="#000000"
                android:layout_marginBottom="12dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando Dirección..."
                android:textColor="#000000"
                android:layout_marginBottom="12dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvRiesgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando Tipo de riesgo..."
                android:textColor="#000000"
                android:layout_marginBottom="12dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargando Descripción..."
                android:textColor="#000000"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="24dp"
            android:visibility="visible"> <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando detalles del reporte..."
                android:textColor="@color/white"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>