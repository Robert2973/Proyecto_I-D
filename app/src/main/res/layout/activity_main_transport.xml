<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/gradient_blue">

            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_user"
                android:background="@drawable/circle_bg_shadow"
                android:layout_margin="16dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/tvSaludo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola, Usuario"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_toEndOf="@id/imgPerfil"
                android:layout_alignTop="@id/imgPerfil"
                android:layout_marginStart="12dp"/>

            <!-- Título sección informativa centrado debajo del saludo -->
            <TextView
                android:id="@+id/tvTituloInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información de Seguridad"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:layout_below="@id/tvSaludo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="66dp"/>
        </RelativeLayout>

        <!-- CLIMA -->
        <LinearLayout
            android:id="@+id/layoutWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgWeather"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_sun"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puebla"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/tvTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25°C • Soleado"
                    android:textColor="#444444"/>
            </LinearLayout>
        </LinearLayout>

        <!-- TEXTO INFORMATIVO -->
        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recuerda mantenerte informado sobre las condiciones de tu zona y tomar precauciones de seguridad."
            android:padding="16dp"
            android:textSize="14sp"
            android:textColor="#555555"
            android:background="@drawable/rounded_card_light"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"/>

        <!-- CATEGORÍAS DE RIESGO -->
        <GridLayout
            android:id="@+id/riskCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:gravity="center"
            android:padding="16dp"
            android:rowCount="3">

            <!-- Ejemplo Riesgo: Inseguridad -->
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                android:background="@drawable/card_transport"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_security"
                    android:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Inseguridad"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_margin="8dp"
                android:background="@drawable/card_transport"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_security"
                    android:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Seguridad"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>
        </GridLayout>

        <!-- BOTÓN MAPA -->
        <Button
            android:id="@+id/btnOpenMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN MAP"
            android:backgroundTint="#0000FF"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:background="@drawable/rounded_button"/>

        <!-- ÚLTIMAS ALERTAS -->
        <TextView
            android:id="@+id/tvUltimasAlertas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Últimas Alertas"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"/>

        <LinearLayout
            android:id="@+id/layoutAlertas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚠️ Asalto reportado cerca de FCFM"
                android:background="@drawable/rounded_card_light"
                android:padding="12dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🌊 Encharcamiento en Av. San Claudio"
                android:background="@drawable/rounded_card_light"
                android:padding="12dp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
