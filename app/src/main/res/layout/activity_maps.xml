<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fragment del mapa -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Flecha de regreso -->
    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_media_previous"
        android:contentDescription="Regresar"
        android:tint="#FFFFFF"
        android:layout_margin="16dp"
        android:layout_gravity="top|start"
        android:background="@drawable/rounded_card_glass"
        android:padding="8dp"
        android:elevation="8dp" />

    <!-- Contenedor flotante de botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <!-- Botón Reporte / Encuesta -->
        <Button
            android:id="@+id/btnEncuesta"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Reporte"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/rounded_card_glass"
            android:elevation="8dp"
            android:layout_marginBottom="12dp"/>

        <!-- Scroll horizontal para tipos de mapa -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:id="@+id/layoutMapTypes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:background="@drawable/rounded_card_glass"
                android:elevation="8dp">

                <Button
                    android:id="@+id/btnNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="Normal"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_card_glass"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/btnSatellite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="Satélite"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_card_glass"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/btnHybrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="Híbrido"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_card_glass"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/btnTerrain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="Terreno"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_card_glass"
                    android:layout_marginEnd="6dp"/>
            </LinearLayout>
        </HorizontalScrollView>


        <!-- Scroll horizontal para capas / overlays -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/layoutMapLayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="@drawable/rounded_card_glass"
                android:elevation="8dp">

                <Button
                    android:id="@+id/btnTraffic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tráfico"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_card_glass"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"/>


                <Button
                    android:id="@+id/btnRelief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Relieve"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_card_glass"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Predeterminado"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_card_glass"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"/>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</FrameLayout>
