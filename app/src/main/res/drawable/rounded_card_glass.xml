<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa base translÃºcida -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66FFFFFF"/> <!-- Blanco 40% -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Brillo superior suave -->
    <item android:top="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#33FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Borde sutil -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#22FFFFFF"/>
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
